for i, v in pairs(game:GetService("ReplicatedStorage").Weapons:GetDescendants()) do
    if v.Name == "MaxSpread" or v.Name == "Spread" or v.Name == "RecoilControl" and getgenv().Recoil then
            v.Value = 0
        else
            v.Value = 1
    end
end

for _, v in pairs(game.ReplicatedStorage.Weapons:GetDescendants()) do
    if v.Name == "FireRate"  and getgenv().FireRate then
            v.Value = 0.02
        else
            v.Value = 0.4
    end
end


for _, v in pairs(game.ReplicatedStorage.Weapons:GetDescendants()) do
    if v.Name == "Auto" and  getgenv().Automatic then
            v.Value = true
        else
            v.Value = false
    end
end
