for i, v in pairs(game:GetService("ReplicatedStorage").Weapons:GetDescendants()) do
    if v.Name == "MaxSpread" or v.Name == "Spread" or v.Name == "RecoilControl"  then
            v.Value = 0
        elseif not getgenv().Recoil then
            v.Value = 1
    end
end

for _, v in pairs(game.ReplicatedStorage.Weapons:GetDescendants()) do
    if v.Name == "FireRate"   then
            v.Value = 0.02
        elseif not getgenv().FireRate then
            v.Value = 0.4
    end
end


for _, v in pairs(game.ReplicatedStorage.Weapons:GetDescendants()) do
    if v.Name == "Auto"  then
            v.Value = true
        elseif not getgenv().Automatic then
            v.Value = false
    end
end
