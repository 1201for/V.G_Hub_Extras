
function maths(X)
 return math.acos(math.cos(X * math.pi)) / math.pi-- credits to snake587 for this function hope he dosen't mind if i use it
end
game:GetService("RunService").RenderStepped:Connect(function()
if getgenv().RainBowGun then
if game.Workspace.Camera:FindFirstChild('Arms') then
for i,v in pairs(game.Workspace.Camera.Arms:GetChildren()) do -- gets thing
if v.ClassName == 'MeshPart' or v.ClassName == "Part" or v.ClassName == "WedgePart" then 
v.Color = Color3.fromHSV(maths(x),1,1)-- changes Color
x = x + .0001
end
end
end
end
end)

while getgenv().RainBowMap and wait(1) do

if game:GetService("Workspace"):FindFirstChild('Map') then
for i,ranbow in pairs(game:GetService("Workspace").Map:GetChildren()) do -- getting map
if ranbow.ClassName == 'MeshPart' or ranbow.ClassName == "Part" or ranbow.ClassName == "WedgePart" then 
ranbow.Color = Color3.fromHSV(maths(x),1,1)-- changes Color
x = x + .0001 -- counting
end
end
end
end

--this is open sourced so it dosen't lag the client 
